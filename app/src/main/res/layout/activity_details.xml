<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:ellipsize="end"
        android:hint="Your Name Here"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_mob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"

        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:ellipsize="end"
        android:hint="Mobile Number"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/roomno"
        android:layout_below="@id/text_mob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Room Number"
        android:textSize="20dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/od1"
        android:layout_below="@+id/roomno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:text="Order1"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>



    <TextView
        android:id="@+id/od1n"
        android:layout_below="@+id/roomno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:text="Quantity"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <TextView
        android:id="@+id/od2"
        android:layout_below="@+id/od1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:text="Order2"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/od2n"
            android:layout_below="@+id/od1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:text="Quantity"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/od3"
        android:layout_below="@+id/od2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:text="Order3"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/od3n"
            android:layout_below="@+id/od2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:text="Quantity"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/od1nv"
        android:layout_below="@+id/od3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:text="Order1nv"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/od1nvn"
            android:layout_below="@+id/od3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="Quantity"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/od2nv"
        android:layout_below="@+id/od1nv"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:text="Order2nv"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/od2nvn"
            android:layout_below="@+id/od1nv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:text="Quantity"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>


    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/od3nv"
        android:layout_below="@+id/od2nv"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:text="Order3nv"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>



        <TextView
            android:id="@+id/od3nvn"
            android:layout_below="@+id/od2nv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:text="Quantity"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/call_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        android:clickable="true"
        android:text="Call to Customer"/>
    <Button
        android:id="@+id/delete_customer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:text="Delete the Customer"
        />



</LinearLayout>

</RelativeLayout>